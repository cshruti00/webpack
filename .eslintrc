{
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"extends": "airbnb",
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2015,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"experimentalObjectRestSpread": true
		}
	},
	"rules": {
		"indent": [
			2,
			"tab"
		],
		"no-tabs": 0,
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"warning",
			"always"
		],
		"comma-dangle":[
			"error", {
				"arrays" : "never",
				"objects": "ignore",
				"imports": "never",
				"exports": "never",
				"functions": "ignore"
			}
		],
		"react/jsx-filename-extension": 0
	}
}